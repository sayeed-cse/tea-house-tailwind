{
  "files.autoSave": "afterDelay",
  "editor.fontFamily": "Fira Code, JetBrains Mono",
  "editor.wordWrap": "on",
  "editor.fontLigatures": true,
  "editor.fontVariations": false,
  "editor.inlayHints.fontFamily": "Fira Code",
  "scm.inputFontFamily": "Fira Code",
  "debug.console.fontFamily": "Fira Code",
  "terminal.integrated.fontFamily": "Fira Code",
  // "notebook.outputFontFamily": "Fira Code, JetBrains Mono",
  "workbench.colorTheme": "One Dark Pro Darker",
  "files.autoSaveDelay": 100,
  "editor.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "editor.scrollbar.verticalScrollbarSize": 10,
  "editor.mouseWheelZoom": true,
  "editor.minimap.maxColumn": 60,
  "editor.minimap.size": "fit",
  "editor.quickSuggestionsDelay": 100,
  "editor.suggestSelection": "recentlyUsed",
  "liveServer.settings.donotVerifyTags": true,
  "liveServer.settings.donotShowInfoMsg": true,
  "tailwindCSS.emmetCompletions": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "vscode.debug-server-ready",
  "editor.tabSize": 2,
  "diffEditor.wordWrap": "on",
  "css.lint.unknownAtRules": "ignore",
  "emmet.showSuggestionsAsSnippets": true,
  "html-css-class-completion.enableEmmetSupport": true,
  "editor.indentSize": "tabSize",
  "editor.detectIndentation": false
}
